PROCEDURE Alarm
BEGIN
  For @c:= 1 To 3 Do
  BEGIN
    Sound (880);
    Delay (200);
    Sound (440);
    Delay (50);
    Nosound;
    Delay (300);
  ENDFOR;
END;
